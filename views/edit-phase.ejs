<%- include("./includes/admin-header") -%>
<!-- CONTENTS -->
<div class="add-article">
  <div class="container">
    <div class="add-article-form">
      <form name="form" method="POST" action="/phases-admin/<%= activity._id %>/edit-phase/<%= phase._id %>" enctype="multipart/form-data">
        <legend style="text-align: center; font-size: 30px;">EDIT PHASE <%= phase.phaseNumber %> in <%= activity.year %> </legend>
        <div class="form-group">
          <label for="phaseNumber">Phase number</label>
          <input type="number" class="form-control" id="title" placeholder="Phase number" name="phaseNumber" value="<%= phase.phaseNumber %>">
        </div>

        <div class="form-group">
          <label for="theme">Phase theme</label>
          <input type="text" class="form-control" id="description" placeholder="phase theme" name="theme" value="<%= phase.theme %>">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description"  id="ta" rows="10"  style="width: 100%;"><%= phase.description %></textarea>
        </div>


        <% if(message != ''){ %>
        <div style="width: 100%; text-align: center;">
          <h4 style="color: brown;">
            <%= message %>
          </h4>
        </div>
        <% } %>
        <div class="text-center">
          <button type="submit" class="btn btn-primary" id="login-button">Save phase</button>
        </div>
        <!-- <div class="not-spin">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div> -->
      </form>
    </div>
  </div>
</div>


<%- include("./includes/admin-footer") -%>