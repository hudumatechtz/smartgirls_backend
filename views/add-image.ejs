<div class="add-article">
  <div class="container">
    <div class="add-article-form">
      <form name="form" method="POST" action="/articles-admin/add-article" enctype="multipart/form-data">
        <legend style="text-align: center; font-size: 30px;">ADD NEW IMAGE</legend>

        <div class="form-group">
          <label for="image">Image</label>
          <input type="file" class="form-control text-center" id="image" name="image">
          <img src="#" alt="" id="imgPreview">
        </div>


        <div class="form-group">
          <label for="img-caption">Image Caption</label>
          <input type="text" class="form-control text-center" id="img-caption" placeholder="Enter image caption" name="link">
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary" id="login-button">Save Image</button>
        </div>
