<div class="add-article">
    <div class="container">
        <div class="add-article-form">
            <form name="form" method="POST" action="/account/register" enctype="multipart/form-data">
                <legend style="text-align: center; font-size: 30px;">ADD NEW ADMIN</legend>
                <div class="form-group">
                    <label for="title">Username</label>
                    <input type="text" class="form-control" id="title" placeholder="username"
                        name="username" required>
                </div>
                <div class="form-group">
                    <label for="title">Password</label>
                    <input type="password" class="form-control" id="title" placeholder="password"
                        name="password" required>
                </div>
                
                

        <% if(message != ''){ %>
        <div style="width: 100%; text-align: center;">
          <h4 style="color: brown;">
            <%= message %>
          </h4>
        </div>
        <% } %>
        <div class="text-center">
          <button type="submit" class="btn btn-primary" id="login-button">Register admin</button>
        </div>
