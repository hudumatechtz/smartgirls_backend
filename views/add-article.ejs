<div class="add-article">
    <div class="container">
        <div class="add-article-form">
            <form name="form" method="POST" action="/articles-admin/add-article" enctype="multipart/form-data">
                <legend style="text-align: center; font-size: 30px;">ADD NEW ARTICLE</legend>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control text-center" id="title" placeholder="Article title"
                        name="title">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" class="form-control text-center" id="img" name="image">
                    <img src="#" alt="pic preview" id="imgPreview">
                </div>
