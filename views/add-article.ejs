<%- include("includes/header") -%>
<section style="min-height: 90vh; margin-top: 15px; display: flex; padding: 60px 0 0 0;">
    <div style="flex-flow: column; flex: 1; background-color: var(--grey-color)">
        <!-- NAVIGATION -->
        <%- include("includes/smartgirls-navigation") -%>
    </div>
    <div style="flex: 4; flex-flow: column;">
        <div  class="container">
            <!-- CONTENTS -->
            <form name="form">
                <legend style="text-align: center; font-size: 40px;">ADD NEW ARTICLE</legend>
                <div class="form-group">
                    <label for="title"></label>
                    <input type="text" class="form-control text-center" id="title" placeholder="title"
                        name="title">
                </div>
                <div class="form-group">
                    <label for="picture"></label>
                    <input type="file" class="form-control text-center" id="picture" placeholder="picture"
                        name="picture">
                </div>
                <div class="form-group">
                    <label for=""></label>
                    <input type="text" class="form-control text-center" id="description" placeholder="extra stuff"
                        name="">
                </div>
                <div class="form-group">
                    <label for="description"></label>
                    <textarea name="description" id="description" cols="30" rows="10" placeholder="description"></textarea>
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-primary" id="login-button">Save article</button>
                </div>
                <div class="not-spin">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<%- include("includes/footer") -%>