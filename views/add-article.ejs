            name="">
    </div> -->
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" id="ta" rows="10" placeholder="description"
                        style="width: 100%;"></textarea>
                </div>
                <% if(message != ''){ %>
                <div style="width: 100%; text-align: center;">
                    <h4 style="color: brown;">
                        <%= message %>
                    </h4>
                </div>
                <% } %>
    <div class="text-center">
        <button type="submit" class="btn btn-primary" id="login-button">Save article</button>
    </div>
