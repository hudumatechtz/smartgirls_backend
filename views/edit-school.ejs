<div class="add-article">
    <div class="container">
        <div class="add-article-form">
            <form name="form" method="POST"
                action="/schools-admin/edit-article/<%= id %>"
                enctype="multipart/form-data">
                <legend style="text-align: center; font-size: 30px;">EDIT SCHOOL</legend>
                <div class="form-group">
                    <label for="title">School name</label>
                    <input type="text" class="text-center form-control" id="title" placeholder="School name"
                        name="name" value="name">
                </div>

                <% if(message != ''){ %>
                <div style="width: 100%; text-align: center;">
                    <h4 style="color: brown;">
                        <%= message %>
                    </h4>
                </div>
                <% } %>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" id="login-button">Save school</button>
                </div>
                <!-- <div class="not-spin">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div> -->
            </form>
        </div>
    </div>
</div>

<script>
    //Preview Image
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#img").change(function () {
        readURL(this);
    });
</script>

