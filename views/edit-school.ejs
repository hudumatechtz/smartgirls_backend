<div class="add-article">
    <div class="container">
        <div class="add-article-form">
            <form name="form" method="POST"
                action="/schools-admin/edit-school/<%= id %>"
                enctype="multipart/form-data">
                <legend style="text-align: center; font-size: 30px;">EDIT SCHOOL</legend>
                <div class="form-group">
                    <label for="title">School name</label>
                    <input type="text" class="form-control" id="title" placeholder="School name"
                        name="name" value="<%= name %>">
                </div>

                <% if(message != ''){ %>
                <div style="width: 100%; text-align: center;">
                    <h4 style="color: brown;">
                        <%= message %>
                    </h4>
                </div>
                <% } %>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" id="login-button">Save school</button>
                </div>
